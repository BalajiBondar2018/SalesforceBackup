<apex:page standardController="Opportunity" showheader="false">

<div style="padding:10px 50px 20px 50px;">

<div style="width: 100%; height: 100%; text-align: center; background-color: #4f4a4a; font-weight:bold ; color: white;
   font-size:150%;border-style: solid; border-width: 2px;border-color:grey;box-shadow: 10px 10px 5px #888888;
   border-radius:15px; text-shadow:#887f81 5px 4px 6px;">
    
    <table style="margin:15 0 15 60px;">
     <tr>
     <td><p style="margin:0 0 0 60px; color: white;"> {!Opportunity.Name} </p> </td>
     <td><p style="margin:0 0 0 60px; color:grey;"> <apex:outputField value="{!Opportunity.StageName}"/> </p> </td>
     <td><p style="margin:0 0 0 60px; color: lightgrey;"> <apex:outputField value="{!Opportunity.CloseDate}"/> </p> </td>
     </tr>
     </table>
    
    
</div>
</div>
</apex:Page>